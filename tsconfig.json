{
  "compilerOptions": {
    "types": [
      "ol",
      "node"
    ],
    "target": "es6",
    "lib": [
      "ES2021",
      "dom"
    ],
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src"
  ]
}
